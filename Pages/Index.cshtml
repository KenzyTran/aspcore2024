@{
    ViewData["Title"] = "Home page";
    ViewData["NoContainer"] = true;
}

<style>
    .book-item img {
        width: 100%;
        height: 260px;
        object-fit: contain;
        background: radial-gradient(white 50%, lightblue 100%)
    }

    .book-item {
        transition: all 0.3s ease;
    }

    .book-item:hover {
            transform: scale(1.05);
    }

        .book-item .card-body {
            position: relative;
            padding-bottom: 40px; /* Chừa khoảng trống để dòng "NOW giao siêu tốc 2h" */
        }

    .now-delivery {
        position: absolute;
        bottom: 10px; /* Đặt dòng chữ ở dưới cùng của thẻ */
        left: 50%;
        transform: translateX(-50%);
        font-size: 14px;
        color: red;
        white-space: nowrap; /* Đảm bảo dòng chữ không bị xuống dòng */
    }

    .book-item h4 {
        margin-bottom: 15px;
    }

    * {
        box-sizing: border-box;
    }

    .slideshow-container {
        position: relative;
        max-width: 1200px;
        margin: 0 auto;
        overflow: hidden;
    }

    .mySlides {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .mySlides img {
            width: 49%;
            /* Loại bỏ float và margin-right */
        }

    .prev, .next {
        cursor: pointer;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        padding: 16px;
        color: black;
        font-weight: bold;
        font-size: 30px;
        user-select: none;
        background-color: rgba(255, 255, 255, 0.8);
    }

    .prev {
        left: 0;
        border-radius: 3px 0 0 3px;
    }

    .next {
        right: 0;
        border-radius: 0 3px 3px 0;
    }

        .prev:hover, .next:hover {
            background-color: rgba(255, 255, 255, 1);
        }

    .banner-container {
        display: flex;
        justify-content: space-around;
        padding: 10px;
        background-color: #f5f5f5;
        border-radius: 10px;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
    }

    .icon-item {
        text-align: center;
        padding: 10px;
    }

        .icon-item img {
            width: 50px;
            height: 50px;
            margin-bottom: 5px;
            border-radius: 50%;
            background-color: #e0e0e0; /* Chỗ này để chừa chỗ cho icon */
        }

        .icon-item p {
            font-size: 14px;
            color: #333;
            margin: 0;
        }
</style>


