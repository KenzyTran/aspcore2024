                    <!-- Thẻ sản phẩm dẫn đến trang chi tiết -->
                    <a href="/BookDetails?id=@(item.Id)" class="text-decoration-none text-dark">
                        <div class="card shadow text-center h-100 book-item">
                            <img src="/images/books/@item.ImageFileName" class="card-img-top p-3" alt="..." />
                            <div class="card-body">
                                <h4>@item.Title</h4>
                                <h4>@(item.Price)$</h4>
                            </div>
                            <p class="now-delivery">NOW giao siêu tốc 2h</p>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>

<script>
    let slideIndex = 1;
    let slideTimeout;

    function showSlides(n) {
        let i;
        let slides = document.getElementsByClassName("mySlides");

        // Nếu n được cung cấp, sử dụng nó; nếu không, sử dụng slideIndex hiện tại
        if (n !== undefined) {
            slideIndex = n;
        }

        // Vòng lại slide đầu tiên hoặc cuối cùng nếu cần
        if (slideIndex > slides.length) { slideIndex = 1 }
        if (slideIndex < 1) { slideIndex = slides.length }

        // Ẩn tất cả các slides
        for (i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
        }

        // Hiển thị slide hiện tại
        slides[slideIndex - 1].style.display = "block";

        // Xóa bất kỳ timeout nào trước đó để ngăn chặn nhiều bộ đếm thời gian chạy đồng thời
        clearTimeout(slideTimeout);

        // Thiết lập thời gian tự động chuyển slide
        slideTimeout = setTimeout(function () {
            showSlides(slideIndex + 1);
        }, 10000); // Đổi slide mỗi giây
    }

    // Chức năng cho nút điều hướng
    function plusSlides(n) {
        showSlides(slideIndex + n);
    }

    // Bắt đầu slideshow
    showSlides(slideIndex);


</script>