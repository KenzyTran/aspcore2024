<!-- Sách mới nhất -->
<div class="py-5">
    <div class="container">
        <h1 class="pb-5 text-center display-5"><strong>Sách mới nhất</strong></h1>
        <div class="row">
            @foreach (var item in Model.listNewestBooks)
            {
                <div class="col-lg-2 col-sm-6 my-2">
                    <!-- Thẻ sản phẩm dẫn đến trang chi tiết -->
                    <a href="/BookDetails?id=@(item.Id)" class="text-decoration-none text-dark">
                        <div class="card shadow text-center h-100 book-item">
                            <img src="/images/books/@item.ImageFileName" class="card-img-top p-3" alt="..." />
                            <div class="card-body">
                                <h4>@item.Title</h4>
                                <h4>@(item.Price)$</h4>
                            </div>
                            <p class="now-delivery">NOW giao siêu tốc 2h</p>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>

